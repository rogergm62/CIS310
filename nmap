import subprocess
import threading

def ping_target():
    subprocess.run(["ping", "-c", "5", "scanme.nmap.org"])

def tcp_scan():
    subprocess.run(["nmap", "-p", "80", "scanme.nmap.org"])

# Running both functions in parallel
threads = []
for func in [ping_target, tcp_scan]:
    thread = threading.Thread(target=func)
    thread.start()
    threads.append(thread)

for thread in threads:
    thread.join()
